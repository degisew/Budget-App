
<%=form_with model: category, url: user_categories_path(current_user) do |f|%>
<div class='form-group p-2'>
  <%=f.label :name, cass: 'form-label' %>
<%= f.text_field :name, class: 'form-control', placeholder: 'Enter category name'%>
</div>
  <div class='form-group p-2'>
    <%=f.label :icon, class: 'form-label'  %>
    <%=f.file_field :icon, class: 'form-control w-75'%>
  </div><br>
  <div class='actions p-2'>
  <%= f.submit 'Save', class: 'btn btn-primary' %><br><br>
  <%=link_to 'Back', user_categories_path(current_user) %>
  </div>
<%end %>